{
	/*  field default: type:"string", len:255
		plural -> if empty then add "-s", "-ies" suffix
	*/
	"schema": "sample",
	"name": "sample_app",
	"description": "a2v10 sample application",
	"catalogs": {
		"Agent": {
			"plural": "Agents",
			"uiName": "Контрагенти",
			"fields": {
				"Kind": {
					"type": "char",
					"len": 4,
					"parameter": true
				},
				"Name": {
					"type": "string",
					"len": 50,
					"uiName": "Name",
					"required": true,
					"name": true
				},
				"Code": {
					"type": "string",
					"len": 16,
					"unique": true,
					"uiName": "Legal Code"
				},
				"FullName": { "uiName": "Full Name" },
				"Memo": { "uiName": "Примітка" }
			},
			"features": [ "index", "editDialog", "browse", "fetch" ]
		},
		"Customer": {
			"extends": "Agent",
			"uiName": "Покупатель",
			"parameters": {
				"Kind": "CUST"
			},
			"features": [ "index", "editDialog", "browse", "fetch" ]
		},
		"Unit": {
			"uiname": "Единицы измерения",
			"fields": {
				"Short": {
					"len": 8,
					"uiName": "Сокращение"
				},
				"Name": {
					"type": "string",
					"len": 50,
					"uiName": "Наименование"
				},
				"Memo": { "uiName": "Примечание" }
			}
		},
		"Product": {
			"uiName": "Товары",
			"fields": {
				"Name": {},
				"Article": {"len": 20, "uiName": "Артикул"},
				"FullName": {},
				"Memo": {}
			},
			"features": ["index","editDialog", "browse", "fetch"]
		},
		"Warehouse": {

		}
	},
	"documents": {
		"Document": {
			"plural": "Documents",
			"fields": {
				"Kind": {
					"type": "char",
					"len": 4,
					"parameter": true
				},
				"Date": {
					"type": "date",
					"default": "Today"
				},
				"Sum": {
					"type": "money",
					"calc": "this.Rows.$sum(r => r.Sum)"
				},
				"Customer": {
					"type": "ref",
					"ref": "Customer"
				},
				"Memo": {}
			},
			"details": {
				"Row": {
					"plural": "Rows",
					"fields": {
						"Product": {
							"type": "ref",
							"ref": "Product"
						},
						"Qty": {
							"type": "float",
							"default": "1"
						},
						"Price": {
							"type": "money"
						},
						"Sum": {
							"type": "money",
							"calc": "this.Price * this.Qty"
						},
						"Memo": {}
					}
				}
			},
			"features": [ "editPage" ]
		},
		"Waybill": {
			"uiName": "Прибуткова накладна",
			"extends": "Document",
			"parameters": {
				"Kind": "WBIN"
			},
			"features": [ "index", "editPage" ]
		}
	},
	"journals": {
		"WJournal": {

		}
	}
}


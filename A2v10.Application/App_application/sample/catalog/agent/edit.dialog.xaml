<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
  <Dialog.Buttons>
    <Button Content="Зберегти" Command="{BindCmd SaveAndClose}" />
    <Button Content="Закрити" Command="{BindCmd Close}" />
  </Dialog.Buttons>
  <Grid>
    <TextBox Value="{Bind Agent.Name}" Label="Name" />
    <TextBox Value="{Bind Agent.Code}" Label="Legal Code" />
    <TextBox Value="{Bind Agent.FullName}" Label="Full Name" />
    <TextBox Value="{Bind Agent.Memo}" Label="Примітка" />
  </Grid>
</Dialog>
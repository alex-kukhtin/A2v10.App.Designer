<Dialog xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
  <Dialog.Buttons>
    <Button Content="Зберегти" Command="{BindCmd SaveAndClose}" />
    <Button Content="Закрити" Command="{BindCmd Close}" />
  </Dialog.Buttons>
  <Grid>
    <TextBox Value="{Bind Product.Name}" Label="Name" />
    <TextBox Value="{Bind Product.Article}" Label="Артикул" />
    <TextBox Value="{Bind Product.FullName}" Label="FullName" />
    <TextBox Value="{Bind Product.Memo}" Label="Memo" />
  </Grid>
</Dialog>
<Page xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml">
  <Page.CollectionView>
    <CollectionView RunAt="ServerUrl" ItemsSource="{Bind Documents}" />
  </Page.CollectionView>
  <Page.Toolbar>
    <Toolbar>
      <Button Icon="Reload" Content="Оновити" Command="{BindCmd Reload}" />
    </Toolbar>
  </Page.Toolbar>
  <Page.Pager>
    <Pager Source="{Bind Parent.Pager}" Style="Rounded" />
  </Page.Pager>
  <DataGrid ItemsSource="{Bind Parent.ItemsSource}" GridLines="Horizontal" Hover="True" Striped="True" FixedHeader="True" Style="Light" Sort="True">
    <DataGridColumn Header="Код" Content="{Bind Id}" Align="Right" Wrap="NoWrap" Fit="True" />
    <DataGridColumn Header="Date" Content="{Bind Date}" />
    <DataGridColumn Header="Customer" Content="{Bind Customer}" />
    <DataGridColumn Header="Sum" Content="{Bind Sum}" />
    <DataGridColumn Header="Memo" Content="{Bind Memo}" />
  </DataGrid>
</Page>